<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.properity.mapper.NoticeMapper">
    <!--更新业主-->
    <update id="update">
        update notice
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="open != null">
                open = #{open},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--批量删除业主信息 (1, 2, 3)-->
    <!--遍历的集合，元素，分隔符，遍历之前拼接前括号-->
    <delete id="delete">
        delete
        from notice
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <!--条件查询-->
    <select id="list" resultType="com.project.properity.pojo.Notice">
        select * from notice
        <where>
            <if test="title != null  and title != ''">
                title like concat('%',#{title},'%')
            </if>
        </where>
        order by id desc
    </select>

</mapper>
